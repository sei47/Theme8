<h1>Pictures</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
    <th>投稿者：<%= picture.user.name %></th>
    <tr>
      <td><%= picture.content %></td>
    </tr>
    <tr>
      <td><%= image_tag(picture.image.url) %></td>
    </tr>
    <tr>
      <td>
        <%= link_to 'Show', picture %>
        <% if current_user.id == User.find_by(id: picture.user_id).id%>
          /<%= link_to 'Edit', edit_picture_path(picture) %>/<%= link_to 'Destroy', picture, method: :delete, data: { confirm: '本当に消しますか？' } %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Picture', new_picture_path %>
